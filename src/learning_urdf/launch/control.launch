<launch>
    <param name="robot_description"
        command="$(find xacro)/xacro $(find learning_urdf)/urdf/xacro/car.urdf.xacro" />

    <node pkg="rviz" type="rviz" name="rviz"
        args="-d $(find learning_urdf)/config/show_hello_urdf.rviz" />
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher"
        output="screen" />
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"
        output="screen" />

    <node pkg="arbotix_python" type="arbotix_driver" name="driver">
        <rosparam command="load" file="$(find learning_urdf)/config/control.yaml" />
        <param name="sim" value="true" />
    </node>
</launch>